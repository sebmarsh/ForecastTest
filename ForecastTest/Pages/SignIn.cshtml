@page
@model ForecastTest.Pages.SignInModel
@{
    Layout = "_Master";
}

<style type="text/css">
    .login-form {
        width: 340px;
        margin: 50px auto;
    }

        .login-form form {
            margin-bottom: 15px;
            background: #f7f7f7;
            box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.3);
            padding: 30px;
        }

        .login-form h2 {
            margin: 0 0 15px;
        }

    .form-control, .btn {
        min-height: 38px;
        border-radius: 2px;
    }

    .btn {
        font-size: 15px;
        font-weight: bold;
    }
</style>

<div class="login-form">
    <form method="post">

        @Html.AntiForgeryToken()

        <h2 class="text-center">Log in</h2>
        <div class="form-group">
            <input type="text" class="form-control" placeholder="Username" required="required" name="login">
        </div>
        <div class="form-group">
            <input type="password" class="form-control" placeholder="Password" required="required" name="pwd">
        </div>

        @if (ViewData.ContainsKey("error"))
        {
            <div class="alert alert-danger" role="alert">
                @ViewData["error"]
            </div>
        }

        <div class="form-group">
            <button type="submit" class="btn btn-primary btn-block">Log in</button>
        </div>

        <div class="clearfix">
            <label>Username == Password</label>
        </div>

    </form>
</div>


@{
}
